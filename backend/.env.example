# Common
NODE_ENV=development
PORT=4000


# Choose driver for dev: "neon-http" | "pg"
DB_DRIVER=neon-http


# Neon connection string (serverless)
# Example: postgres://USER:PASSWORD@ep-xxx-yyy.ap-southeast-1.aws.neon.tech/DB?sslmode=require
DATABASE_URL=


# Local Postgres (optional)
LOCAL_DATABASE_URL=postgres://postgres:postgres@localhost:5432/appdb


# Frontend origin for CORS
CLIENT_URL=http://localhost:5173